<!-- create new CAMPGROUND page -->

<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 45%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter campground name..." name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Enter campground price..." name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter image url..." name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>
</div>



<% include ../partials/footer %>
